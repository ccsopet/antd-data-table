{
  "compilerOptions": {
    "module": "commonjs",
    "jsx": "react",
    "strictNullChecks": true,
    "target": "es5",
    "experimentalDecorators": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "rootDirs": [
      "src",
      "__story__"
    ],
    "outDir": "lib",
    "lib": [
      "es5",
      "es2015",
      "dom",
      "scripthost",
      "es2016.array.include"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "__story__",
    "node_modules"
  ]
}